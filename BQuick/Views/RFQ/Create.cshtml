                    <hr>

                    <div class="mb-3">
                        <label for="formFile" class="form-label form-label-bold">Attachment</label>
                        <input class="form-control" type="file" id="formFile" name="attachment">
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-danger">Discard</a>
                </div>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            let itemCount = 1;

            $('#addItem').click(function() {
                itemCount++;
                const newRow = `
                    <tr>
                        <td>${itemCount}</td>
                        <td><input type="text" class="form-control" name="RFQItems[${itemCount-1}].Item.ItemName"></td>
                        <td><input type="text" class="form-control" name="RFQItems[${itemCount-1}].Item.Description"></td>
                        <td><input type="number" class="form-control" name="RFQItems[${itemCount-1}].Quantity" value="1"></td>
                        <td><input type="text" class="form-control" name="RFQItems[${itemCount-1}].Item.UnitOfMeasure"></td>
                        <td><input type="number" class="form-control" name="RFQItems[${itemCount-1}].UnitPrice" step="0.01"></td>
                        <td><input type="text" class="form-control" name="RFQItems[${itemCount-1}].Leadtime"></td>
                        <td><button type="button" class="btn btn-danger btn-sm remove-item">Remove</button></td>
                    </tr>
                `;
                $('#itemsTable tbody').append(newRow);
            });

            $(document).on('click', '.remove-item', function() {
                $(this).closest('tr').remove();
            });
        });
    </script>
}
