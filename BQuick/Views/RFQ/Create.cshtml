                    <table class="table" id="itemsTable">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Item Name</th>
                                <th>Item Description</th>
                                <th>Qty</th>
                                <th>UoM</th>
                                <th>Budget</th>
                                <th>Leadtime</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td><input type="text" class="form-control" name="RFQItems[0].Item.ItemName"></td>
                                <td><input type="text" class="form-control" name="RFQItems[0].Item.Description"></td>
