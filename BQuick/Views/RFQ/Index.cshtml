@model IEnumerable<BQuick.Models.RFQ>

@{
    ViewData["Title"] = "RFQ List";
}

<main class="content-div mx-3">
    <div class="container-fluid mt-4">
        <div class="header mb-4 w-100 page-header" style="font-size: 29px;">
            <a class="text-decoration-none" asp-controller="RFQ" asp-action="Index"><span class="text-danger rfq-link">RFQ</span></a>&nbsp;<span>&gt;</span>&nbsp;<span class="tes text-decoration">Quotation</span>
        </div>

        <div class="d-flex mb-3 gap-3">
            <a class="btn btn-danger d-flex align-items-center gap-1" asp-controller="RFQ" asp-action="CreateFull">
                <i class='bx bx-plus'></i> Create RFQ
            </a>

            <div class="input-group" style="width: 400px;">
                <input type="text" id="searchInput" class="form-control border-end-0 shadow-none" placeholder="Search..." onkeyup="search()" />
                <i class='bx bx-search input-group-text bg-white border-start-0' style="font-size: 1rem;"></i>
            </div>
        </div>
        <table class="table table-bordered table-sortable mb-5">
            <thead class="table-dark">
                <tr>
                    <th>
                        <div class="d-flex align-items-center justify-content-between w-100 text-white">
                            @Html.DisplayNameFor(model => model.RFQCode) <span class="sort-icons"></span>
                        </div>
                    </th>
                    <th>
                        <div class="d-flex align-items-center justify-content-between w-100 text-white">
                            @Html.DisplayNameFor(model => model.RFQName) <span class="sort-icons"></span>
                        </div>
                    </th>
                    <th>
                        <div class="d-flex align-items-center justify-content-between w-100 text-white">
                            @Html.DisplayNameFor(model => model.Customer) <span class="sort-icons"></span>
                        </div>
                    </th>
                    <th>
                        <div class="d-flex align-items-center justify-content-between w-100 text-white">
                            @Html.DisplayNameFor(model => model.RequestDate) <span class="sort-icons"></span>
                        </div>
                    </th>
                    <th>
                        <div class="d-flex align-items-center justify-content-between w-100 text-white">
                            @Html.DisplayNameFor(model => model.DueDate) <span class="sort-icons"></span>
                        </div>
                    </th>
                    <th>
                        <div class="d-flex align-items-center justify-content-between w-100 text-white">
                            @Html.DisplayNameFor(model => model.RFQStatus) <span class="sort-icons"></span>
                        </div>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RFQCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RFQName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.CompanyName)
                        </td>
                        <td>
                            @item.RequestDate.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @item.DueDate.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RFQStatus.Name)
                        </td>
                        <td>
                            <a asp-action="CreateFull" asp-route-id="@item.RFQID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.RFQID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</main>